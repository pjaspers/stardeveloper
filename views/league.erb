<hr class="double" />
<h1>LEAGUE OF LEGENDS</h1>
<hr class="thick"/>
<ul>
  <% Tweet.order(:count).reverse.group_and_count(:name).map([:name, :count]).each_with_index do |r,index| %>
    <li class="<%= (index % 2 == 0) ? "even": "less-even" %>">
      <%= r.first %>: <%= r.last %>
    </li>
  <% end %>
</ul>
