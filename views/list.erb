
<ul class="blocks">
  <% @tweets.order(:posted_at).each_with_index do |tweet, index| %>
    <li class="<%= (index % 2 == 0) ? "even": "less-even" %> blocks__tweet">
      <p>
        <a href="/tweet/<%=tweet.tweet_id %>">
          <%= tweet.text %>
        </a>
      </p>
      <a class="blocks__author" href="/developer/<%= tweet.name %>">
        <%= tweet.name %>
      </a>
    </li>
  <% end %>
</ul>
